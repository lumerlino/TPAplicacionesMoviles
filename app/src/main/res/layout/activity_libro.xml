                android:textStyle="bold"></TextView>
            <TextView
                android:id="@+id/tvMediaType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cargando..."
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
